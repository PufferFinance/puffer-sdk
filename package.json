{
  "name": "@pufferfinance/puffer-sdk",
  "description": "SDK for interacting with the puffer smart contracts",
  "version": "1.30.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/PufferFinance/puffer-sdk.git"
  },
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./handlers/*": {
      "types": "./dist/contracts/handlers/*.d.ts",
      "import": "./dist/contracts/handlers/*.js",
      "require": "./dist/contracts/handlers/*.cjs"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "pnpm build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "release": "release-it",
    "docs:start": "pnpm --filter docs run start",
    "docs:build": "pnpm --filter docs run build",
    "docs:deploy": "pnpm --filter docs run deploy"
  },
  "dependencies": {
    "viem": "^2.45.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eth-testing": "^1.14.0",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.3"
  }
}
