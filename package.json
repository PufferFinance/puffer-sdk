{
  "name": "@pufferfinance/puffer-sdk",
  "description": "SDK for interacting with the puffer smart contracts",
  "version": "1.5.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/PufferFinance/puffer-sdk.git"
  },
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./handlers/*": {
      "types": "./dist/contracts/handlers/*.d.ts",
      "import": "./dist/contracts/handlers/*.js",
      "require": "./dist/contracts/handlers/*.cjs"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "pnpm build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "release": "release-it",
    "docs:start": "pnpm --filter docs run start",
    "docs:build": "pnpm --filter docs run build",
    "docs:deploy": "pnpm --filter docs run deploy"
  },
  "dependencies": {
    "viem": "~2.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eth-testing": "^1.14.0",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.2"
  }
}
